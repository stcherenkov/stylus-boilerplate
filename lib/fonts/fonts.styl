	base: {
		family: "'Helvetica Neue', Arial, sans-serif"
	},
	heading: {
		family: "'Roboto Slab', 'Times New Roman', serif",
		weight: 600
	}
}

font()
	_font = _parse-font(arguments)
	_args = ()
	for arg in arguments
		if not fonts[arg]
			push(_args, arg)
			p(arg)
			p(_args)
	font: _args

