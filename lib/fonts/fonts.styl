@require '../_tools'

_parse-font()
	_style = ()
	_size = ()
	_line = ()
	_family = ()
	for arg in arguments
		if typeof(arg) == 'unit'
			p(arg)
			if _size
				p('line')
			else
				p('size')
				_size = arg

